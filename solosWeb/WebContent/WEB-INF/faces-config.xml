<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	
	<managed-bean>
		<managed-bean-name>listaUsuariosBean</managed-bean-name>
		<managed-bean-class>br.com.cs2.solos.bean.ListaUsuariosBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>cadastroUsuariosBean</managed-bean-name>
		<managed-bean-class>br.com.cs2.solos.bean.CadastroUsuariosBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>cadastrarUsuario</display-name>
		<from-view-id>/cadastrarUsuario.jsp</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/listaUsuarios.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>listaUsuarios</display-name>
		<from-view-id>/listaUsuarios.jsp</from-view-id>
		<navigation-case>
			<from-outcome>novoUsuario</from-outcome>
			<to-view-id>/cadastrarUsuario.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>cadastrarUsuario</display-name>
		<from-view-id>/cadastrarUsuario.jsp</from-view-id>
		<navigation-case>
			<from-outcome>listaUsuarios</from-outcome>
			<to-view-id>/listaUsuarios.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
